@model IEnumerable<SocialNet.ViewModels.UserStatus>
@{
    ViewBag.Title = "Home Page";
}

<body>
    @{Html.RenderPartial("LoginBar", "Shared");}
    <div class="main-container">
        <div class="wall-posts">
            <div class="New-status">
            @using (Html.BeginForm("Create", "UserStatus"))
            {
                @Html.Action("Create", "UserStatus")   
            }
            </div>
            @foreach(var u in Model)
            {
                <div class="StatusForm">
                    <p style="color: grey;">Name = @u.UserName | @u.StatusDate | ID = @u.UserStatusID</p>
                    <p>@u.StatusBody</p>
                </div>
            }
        </div>
    </div>
    <div class="rightnav">
        @Html.Action("RightBar", "Home")
    </div>
</body>