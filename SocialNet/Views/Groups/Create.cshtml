@using Microsoft.AspNet.Identity;
@model SocialNet.ViewModels.ConnectionViewModel

@{
    ViewBag.Title = "Create a Group";
}

@{Html.RenderPartial("LoginBar", Model);}

<body>
    <div class="main-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div style="padding: 0px 0px 0px 25px;"><h3>Create a group</h3></div>
                <hr />
                <div class="wall-posts">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConnectionGroupsForm.GroupName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ConnectionGroupsForm.GroupName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ConnectionGroupsForm.GroupName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConnectionGroupsForm.GroupPhoto, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ConnectionGroupsForm.GroupPhoto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ConnectionGroupsForm.GroupPhoto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
        @Html.Partial("RightBar", Model)
</body>
