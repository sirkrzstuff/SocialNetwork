@model IEnumerable<SocialNet.ViewModels.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhotoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoDate)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.PhotoAlbum)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model.Where(photo => photo.UserName == this.User.Identity.Name))
{
    <tr>
        <td>
            <img src="@Url.Content(item.PhotoName)" />

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhotoDate)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.PhotoAlbum)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
